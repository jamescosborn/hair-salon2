@using HairSalon.Models;
@{
  Layout = "_Layout";
}
<div class="well">
<h2>Update</h2>
  <form action="/stylists/@Model["stylist"].Id/clients/@Model["client"].Id/update/success" method="post">
    <div class="form-group">
      <label for="client-update">Name:</label>
      <input class="form-control" id="client-update" name="client-update" type="text" required>
      <input type="hidden" name="client-id" id="client-id" value='@Model["client"].Id'>
    </div>
    <button class="btn btn-danger" type="submit" name="submit-button">Update Name</button>
  </form>
<h2>Delete</h2>
  <a href="/stylists/clients/delete/success">Delete contact</a>
</div>
